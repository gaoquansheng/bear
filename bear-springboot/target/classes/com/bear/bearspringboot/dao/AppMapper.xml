<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bear.bearspringboot.dao.AppMapper">

    <select id="isOldUserName" parameterType="String" resultType="int">
        select count(*) from user where userName = #{userName}
    </select>
    <select id="isOldUserTel" parameterType="String" resultType="int">
        select count(*) from user where userTel = #{userTel}
    </select>
    <insert id="register" parameterType="User">
        insert into user (userName,userPwd,userTel,isAdmin) values (#{userName},#{userPwd},#{userTel},0)
    </insert>

    <select id="login" resultType="User" parameterType="User">
        select * from user where userTel = #{userTel} and userPwd = #{userPwd}
    </select>
    <update id="updateUserNameById" parameterType="User">
        update user set userName = #{userName} where userId = #{userId}
    </update>
</mapper>